<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>E-commerce CoderHouse</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      background: white;
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.3);
      padding: 30px;
    }

    h1, h2 {
      color: #667eea;
      margin-bottom: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
    }

    .nav {
      display: flex;
      gap: 15px;
      margin-bottom: 30px;
      justify-content: center;
      flex-wrap: wrap;
      align-items: center;
    }

    .nav a, .nav button {
      padding: 12px 24px;
      background: #667eea;
      color: white;
      text-decoration: none;
      border-radius: 8px;
      transition: background 0.3s, transform 0.2s;
      font-weight: 600;
      border: none;
      cursor: pointer;
      font-size: 15px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .nav a:hover, .nav button:hover {
      background: #764ba2;
      transform: translateY(-2px);
    }

    .nav .cart-btn {
      background: #28a745;
      position: relative;
    }

    .nav .cart-btn:hover {
      background: #218838;
    }

    .cart-badge {
      position: absolute;
      top: -8px;
      right: -8px;
      background: #dc3545;
      color: white;
      border-radius: 50%;
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 12px;
      font-weight: bold;
    }

    .filters {
      background: #f8f9fa;
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 30px;
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter-group {
      display: flex;
      flex-direction: column;
      gap: 5px;
    }

    .filter-group label {
      font-size: 13px;
      font-weight: 600;
      color: #555;
    }

    .filter-group select,
    .filter-group input {
      padding: 8px 12px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 14px;
    }

    .btn-filter {
      padding: 8px 20px;
      background: #667eea;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-weight: 600;
      transition: background 0.3s;
      align-self: flex-end;
    }

    .btn-filter:hover {
      background: #764ba2;
    }

    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 25px;
      margin-top: 20px;
    }

    .product-card {
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      padding: 20px;
      transition: transform 0.2s, box-shadow 0.2s;
      background: #f8f9fa;
      display: flex;
      flex-direction: column;
    }

    .product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    .product-title {
      font-size: 18px;
      font-weight: bold;
      color: #333;
      margin-bottom: 10px;
    }

    .product-description {
      color: #666;
      font-size: 14px;
      margin-bottom: 15px;
      line-height: 1.4;
      flex-grow: 1;
    }

    .product-price {
      font-size: 28px;
      color: #667eea;
      font-weight: bold;
      margin-bottom: 12px;
    }

    .product-info {
      display: flex;
      justify-content: space-between;
      font-size: 13px;
      color: #999;
      margin-bottom: 10px;
    }

    .product-code {
      background: #e9ecef;
      padding: 4px 8px;
      border-radius: 4px;
      font-family: monospace;
      font-size: 12px;
    }

    .product-status {
      display: inline-block;
      padding: 4px 10px;
      border-radius: 4px;
      font-size: 12px;
      font-weight: bold;
    }

    .status-active {
      background: #d4edda;
      color: #155724;
    }

    .status-inactive {
      background: #f8d7da;
      color: #721c24;
    }

    .btn {
      padding: 10px 15px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
      transition: all 0.3s;
      text-decoration: none;
      display: inline-block;
      text-align: center;
    }

    .btn-primary {
      background: #667eea;
      color: white;
    }

    .btn-primary:hover {
      background: #5568d3;
    }

    .btn-success {
      background: #28a745;
      color: white;
    }

    .btn-success:hover {
      background: #218838;
    }

    .btn-danger {
      background: #dc3545;
      color: white;
    }

    .btn-danger:hover {
      background: #c82333;
    }

    .btn-block {
      width: 100%;
      margin-top: 10px;
    }

    .pagination {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
      margin-top: 30px;
      flex-wrap: wrap;
    }

    .pagination a,
    .pagination span {
      padding: 8px 15px;
      border: 1px solid #ddd;
      border-radius: 5px;
      text-decoration: none;
      color: #667eea;
      font-weight: 600;
      transition: all 0.3s;
    }

    .pagination a:hover {
      background: #667eea;
      color: white;
    }

    .pagination .active {
      background: #667eea;
      color: white;
      border-color: #667eea;
    }

    .pagination .disabled {
      color: #ccc;
      cursor: not-allowed;
      border-color: #eee;
    }

    .empty-message {
      text-align: center;
      padding: 60px 20px;
      color: #999;
      font-size: 18px;
    }

    .cart-item {
      display: grid;
      grid-template-columns: 100px 1fr auto;
      gap: 20px;
      padding: 20px;
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      margin-bottom: 15px;
      background: #f8f9fa;
      align-items: center;
    }

    .cart-item-image {
      width: 100px;
      height: 100px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 36px;
    }

    .cart-item-info {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .cart-item-title {
      font-size: 20px;
      font-weight: bold;
      color: #333;
    }

    .cart-item-description {
      color: #666;
      font-size: 14px;
    }

    .cart-item-details {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
      margin-top: 8px;
    }

    .cart-detail-item {
      background: white;
      padding: 8px 12px;
      border-radius: 5px;
      font-size: 14px;
      display: flex;
      align-items: center;
      gap: 5px;
    }

    .cart-detail-label {
      font-weight: 600;
      color: #555;
    }

    .cart-detail-value {
      color: #667eea;
      font-weight: bold;
    }

    .cart-item-actions {
      display: flex;
      flex-direction: column;
      gap: 8px;
      min-width: 120px;
    }

    .cart-total {
      text-align: right;
      font-size: 28px;
      font-weight: bold;
      color: #667eea;
      margin-top: 20px;
      padding: 25px;
      background: #f8f9fa;
      border-radius: 8px;
      border: 2px solid #667eea;
    }

    .error-message {
      background: #f8d7da;
      color: #721c24;
      padding: 15px;
      border-radius: 5px;
      margin-bottom: 20px;
      text-align: center;
    }

    /* Modal styles */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0,0,0,0.5);
      animation: fadeIn 0.3s;
    }

    .modal.active {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .modal-content {
      background-color: white;
      padding: 30px;
      border-radius: 10px;
      max-width: 500px;
      width: 90%;
      box-shadow: 0 10px 40px rgba(0,0,0,0.3);
      animation: slideIn 0.3s;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @keyframes slideIn {
      from { transform: translateY(-50px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }

    .modal-header {
      margin-bottom: 20px;
      padding-bottom: 15px;
      border-bottom: 2px solid #e0e0e0;
    }

    .modal-header h2 {
      margin: 0;
      color: #667eea;
    }

    .modal-body {
      margin-bottom: 20px;
    }

    .modal-product-info {
      background: #f8f9fa;
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 20px;
    }

    .modal-product-title {
      font-size: 18px;
      font-weight: bold;
      color: #333;
      margin-bottom: 8px;
    }

    .modal-product-price {
      font-size: 24px;
      color: #667eea;
      font-weight: bold;
    }

    .quantity-selector {
      display: flex;
      align-items: center;
      gap: 15px;
      margin: 20px 0;
    }

    .quantity-selector label {
      font-weight: 600;
      font-size: 16px;
    }

    .quantity-controls {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .quantity-btn {
      width: 40px;
      height: 40px;
      border: 2px solid #667eea;
      background: white;
      color: #667eea;
      font-size: 20px;
      font-weight: bold;
      border-radius: 5px;
      cursor: pointer;
      transition: all 0.3s;
    }

    .quantity-btn:hover {
      background: #667eea;
      color: white;
    }

    .quantity-input {
      width: 80px;
      text-align: center;
      font-size: 18px;
      font-weight: bold;
      padding: 8px;
      border: 2px solid #ddd;
      border-radius: 5px;
    }

    .modal-total {
      background: #e7f3ff;
      padding: 15px;
      border-radius: 8px;
      text-align: center;
      margin: 20px 0;
    }

    .modal-total-label {
      font-size: 14px;
      color: #666;
      margin-bottom: 5px;
    }

    .modal-total-value {
      font-size: 28px;
      font-weight: bold;
      color: #667eea;
    }

    .modal-footer {
      display: flex;
      gap: 10px;
    }

    .modal-footer button {
      flex: 1;
      padding: 12px;
      font-size: 16px;
      font-weight: bold;
    }

    @media (max-width: 768px) {
      .product-grid {
        grid-template-columns: 1fr;
      }
      
      .filters {
        flex-direction: column;
      }

      .filter-group {
        width: 100%;
      }

      .cart-item {
        grid-template-columns: 1fr;
        text-align: center;
      }

      .cart-item-image {
        margin: 0 auto;
      }

      .cart-item-actions {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <nav class="nav">
      <a href="/products">üè™ Productos</a>
      <a href="/realtimeproducts">‚ö° Tiempo Real</a>
      <button class="cart-btn" onclick="goToCart()">
        üõí Mi Carrito
        <span class="cart-badge" id="cartBadge" style="display: none;">0</span>
      </button>
    </nav>
    
    {{{body}}}
  </div>

  <script>
    // Funci√≥n global para ir al carrito
    function goToCart() {
      const cartId = localStorage.getItem('cartId');
      if (cartId) {
        window.location.href = `/carts/${cartId}`;
      } else {
        if (confirm('No tienes un carrito a√∫n. ¬øDeseas crear uno?')) {
          createCart();
        }
      }
    }

    // Crear carrito
    async function createCart() {
      try {
        const response = await fetch('/api/carts', {
          method: 'POST'
        });
        const data = await response.json();
        if (data.status === 'success') {
          localStorage.setItem('cartId', data.payload._id);
          window.location.href = `/carts/${data.payload._id}`;
        }
      } catch (error) {
        alert('Error al crear carrito: ' + error.message);
      }
    }

    // Actualizar badge del carrito
    async function updateCartBadge() {
      const cartId = localStorage.getItem('cartId');
      if (cartId) {
        try {
          const response = await fetch(`/api/carts/${cartId}`);
          const data = await response.json();
          if (data.status === 'success') {
            const totalItems = data.payload.products.reduce((sum, item) => sum + item.quantity, 0);
            const badge = document.getElementById('cartBadge');
            if (totalItems > 0) {
              badge.textContent = totalItems;
              badge.style.display = 'flex';
            } else {
              badge.style.display = 'none';
            }
          }
        } catch (error) {
          console.error('Error al actualizar badge:', error);
        }
      }
    }

    // Actualizar badge al cargar la p√°gina
    updateCartBadge();
  </script>
</body>
</html>